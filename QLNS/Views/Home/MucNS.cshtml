
@{
    ViewBag.Title = "MucNS";
    Layout = "~/Views/Shared/_Layout.cshtml";
      var NongSanCungNhom = (List<QLNS.Models.EF.NongSan>)ViewBag.NSCN;
    var NNS = (List<QLNS.Models.EF.NhomN>)ViewBag.NNS;
}

<div class="features_items">
    <!--features_items-->
    @foreach (var item in NNS)
    {
        <h2 class="title text-center">@item.ten_nhom_ns</h2>
    }
    @foreach (var item in NongSanCungNhom)
    {



        var url = "/NongSan/Detail/" + item.ma_ns;
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        <img src="@item.hinh_anh" alt="" style="height:250px; width:100%" />
                        <h2>@item.gia_goc</h2>
                        <p style="color:#16b91d">@item.ten_ns</p>
                        <p style="color:black">@item.mo_ta</p>
                    </div>
                    <div class="product-overlay">
                        <div class="overlay-content">
                            <a href="@url" class="btn btn-default view-product"><i class="fa fa-street-view"></i>Xem chi tiết</a>
                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }


</div>


