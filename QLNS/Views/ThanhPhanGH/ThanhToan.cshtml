@model List<QLNS.Models.Function.TpGioHang>


@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <table class="table">
        <thead>
            <tr style="font-weight:bold">
                <td>Mã nông sản</td>
                <td>Tên nông sản</td>
                <td>Ảnh</td>
                <td>Số lượng</td>
                <td>Đơn giá</td>
                <td>Thành tiền</td>
                <td>Thao tác</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.nongsan.ma_ns</td>
                    <td>@item.nongsan.ten_ns</td>
                    <td><img src="@item.nongsan.hinh_anh" style="width:150px; height:100px" /></td>
                    <td><input type="text" class="txtso_luong" data-id="@item.nongsan.ma_ns" value="@item.so_luong" style="width:80px" /></td>
                    <td style="width:150px">@item.nongsan.gia_goc.GetValueOrDefault(0)</td>
                    <td>@((item.nongsan.gia_goc.GetValueOrDefault(0) * item.so_luong))</td>
                    <td><a href="#" data-id="@item.nongsan.ma_ns" class="btn-delete">Xóa</a></td>
                </tr>
            }

        </tbody>
  </table> 
  <div class="section group">
      <div class="col-md-8">
          @using (Html.BeginForm("ThanhToan", "ThanhPhanGH", FormMethod.Post))
          {
              <div class="form-group">
                  <label>Người nhận</label>
                  <input name="ten_kh" class="form-control" />
              </div>
              <div class="form-group">
                  <label>Số điện thoại</label>
                  <input name="sdt_kh" class="form-control" />
              </div>
              <div class="form-group">
                  <label>Địa chỉ</label>
                  <input name="dia_chi_kh" class="form-control" />
              </div>
              <div class="form-group">
                  <label>Email</label>
                  <input name="email_kh" class="form-control" />
              </div>
              <button type="submit" class="btn">Thanh toán</button>
          }
      </div>
      
  </div> 
      
    


